<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="domain.Show"
           table="Show">
        <id name="id" column="id">
        </id>
        <property
                name="name"
                column="name"/>
        <property
                name="date"
                column="date"/>
    </class>
</hibernate-mapping>